@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<h1>Confirmare</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p class="text-center">
    <a id="confirm-link" href="@Model.EmailConfirmationUrl">Apăsați aici pentru confirmarea contului dumneavoastră</a>
</p>
    }
    else
    {
<p>
        Please check your email to confirm your account.
</p>
    }
}

